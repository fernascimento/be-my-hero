<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
	<%= link_to root_path, class: "navbar-brand" do %>
	<i class="fas fa-mask"></i>
	<% end %>

	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>

	<div class="collapse navbar-collapse" id="navbarSupportedContent">
		<ul class="navbar-nav mr-auto">

			<li class="nav-item <%= is_active?(heros_path) %>">
				<%= link_to "Get a Hero", heros_path, class: "nav-link" %>
			</li>

			<li class="nav-item <%= is_active?(new_hero_path) %>">
				<%= link_to "Be a Hero", new_hero_path, class: "nav-link" %>
			</li>

			<li class="nav-item dropdown">
				<%= image_tag "https://cdn.iconscout.com/icon/free/png-512/avatar-370-456322.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
				<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
					<%= link_to "Bookings", bookings_path, class: "dropdown-item" %>
					<%= link_to "Your Profile", hero_path(Hero.last), class: "dropdown-item" %>
					<%= link_to "Sign Out", "#", class: "dropdown-item" %>
				</div>
			</li>
			
		</ul>
</div>