    <button class="btn btn-outline-primary"><%= link_to "Become a hero", new_hero_path %></button>
  <% end %>
  <div class="row">
    <% @heros.each do |hero| %>
      <div class="col-lg-4 my-3">
        <div class="card-trip">
          <img src="<%= cl_image_path hero.photo.key, height: 300, crop: :fill %>" />
          <div class="card-trip-infos">
            <div>
              <h3><%= link_to  hero.name, heros_path(hero) %></h3>
              <p><%= hero.description %></p>
          </div>
