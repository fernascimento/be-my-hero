

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://miro.medium.com/max/1400/0*zL5gOejQqzvWdaF1.jpg);">
  <div class="d-flex justify-content-center">
    <div class="d-inline-flex flex-column">
      <h1>Find your hero</h1>
      <br>
      <%= render "shared/search" %>
      <br>
    </div>
  </div>
</div>


<div class="container">
  <br>
  <div class="row">
    <% @heros.each do |hero| %>
      <div class="col-lg-4">
        <% if hero.photos.attached? %>
          <div class="box box2" style="background-image: url('<%= cl_image_path hero.photos.first.key, :width=>358, :height=>262, :crop=>'fill' %>')">
        <% else %>
            <div class="box box2" style="background-image: url('https://blog.dana-farber.org/insight/wp-content/uploads/2014/09/452186425-Converted.jpg.jpg')">
        <% end %>
          <div class="evenboxinner"><%= hero.name %></div>
          <div class="evenboxinnerdown"><%= hero.price %>â‚¬</div>
          <div class="oddboxinner"><i class="fas fa-star"></i></div>
        <%= link_to "", hero_path(hero), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
